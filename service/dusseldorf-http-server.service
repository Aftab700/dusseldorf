[Unit]
Description=Dusseldorf HTTP Server
After=network.target mongod.service

[Service]
# /etc/systemd/system/dusseldorf-http-server.service

User=root
Group=root

# Path to your project's root directory
WorkingDirectory=/root/dusseldorf/listener.http/src

# Path to the .env file
EnvironmentFile=/root/dusseldorf/.env

Environment="LSTNER_HTTP_PORT=80"
Environment="LSTNER_HTTP_TLS=0"

# Command to start the service, using the virtual environment's python
ExecStart=/root/dusseldorf/venv/bin/python run.py

Restart=always

[Install]
WantedBy=multi-user.target
